{
  "editor.tabSize": 2,
  "haxe.displayConfigurations": [
    ["bin/web.build/build.hxml"],
    ["tests.hxml"]
  ],
  "astyle.additional_languages": ["haxe"],
  "astyle.cmd_options": [
    "--mode=cs",
    "--style=java",
    "--lineend=linux",
    "--add-braces",
    "--attach-closing-while",
    "--break-closing-braces",
    "--keep-one-line-statements",
    "--indent-col1-comments",
    "--indent-preproc-block",
    "--indent=spaces=2",
    "--indent-switches",
    "--pad-comma",
    "--pad-header",
    "--unpad-paren"
  ],
  "search.exclude": {
    "bin/**": true
  },
  "haxe.enableCodeLens": false,
  "haxe.displayPort": 6000,
  "haxe.displayServer": { // configuration for starting haxe completion server itself
    "arguments": ["-v"], // arguments before --wait (-v is useful for debugging)
    // , "--times"
  }
}