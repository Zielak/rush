{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    { "label": "Build --debug",
      "type": "shell",
      "command": "flow build web --debug",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    },
    { "label": "Build",
      "type": "shell",
      "command": "flow build web",
      "group": "build",
      "problemMatcher": []
    },
    { "label": "Testpage",
      "type": "shell",
      "command": "fast-live-reload --interval 50 -s bin/web/ -sp 8090 src/ -e \"flow build web\" assets/ -e \"flow build web\"",
      "windows": {
        "command": "fast-live-reload --interval 50 -s bin\\web\\ -sp 8090",
        "args": [
          "src\\", "-e", "\"flow build web\"",
          "assets\\", "-e", "\"flow build web\""
        ]
      },
      "group": "none",
      "problemMatcher": [],
      "isBackground": true
    },
    { "label": "Testpage --debug",
      "command": "fast-live-reload",
      "type": "shell",
      "osx": {
        "args": [
          "--interval", "50", "-s", "bin/web/", "-sp", "8090", "-p", "8099",
          "src/", "-e", "flow build web --debug",
          "assets/", "-e", "flow build web --debug"
        ],
      },
      "linux": {
        "args": [
          "--interval", "50", "-s", "bin/web/", "-sp", "8090", "-p", "8099",
          "src/", "-e", "flow build web --debug",
          "assets/", "-e", "flow build web --debug"
        ],
      },
      "windows": {
        "command": "fast-live-reload --interval 50 -s bin\\web\\ -sp 8090 src\\ -e \"flow build web --debug\" assets\\ -e \"flow build web --debug\"",
        "options": {
          "shell": {
            "executable": "C:\\WINDOWS\\System32\\cmd.exe",
            "args": [
              "/d", "/c"
            ]
          }
        },
        // "args": [
        //   "--interval", "50", "-s", "bin\\web\\", "-sp", "8090", "-p", "8099",
        //   "src\\", "-e", "\"flow build web --debug\"",
        //   "assets\\", "-e", "\"flow build web --debug\""
        // ],
      },
      "group": "none",
      "problemMatcher": [],
      "isBackground": true
    }
  ]
}