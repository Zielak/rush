{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build",
      "type": "shell",
      "command": "flow",
      "args": [
        "build",
        "web"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [
        "$haxe"
      ],
      "presentation": {
        "echo": true,
        "reveal": "silent"
      }
    },
    {
      "label": "Run Web with testpage",
      "type": "shell",
      "command": "flow",
      "args": [
        "run",
        "web",
        "--timeout",
        "0"
      ],
      "group": "build",
      "problemMatcher": [
        "$haxe"
      ],
      "presentation": {
        "echo": true,
        "reveal": "silent"
      }
    },
    {
      "label": "Haxe Cache Server",
      "identifier": "cacheServer",
      "command": "haxe",
      "args": [
        "-v",
        "--wait",
        "6000"
      ],
      "group": "none",
      "presentation": {
        "echo": true,
        "reveal": "silent"
      },
      "isBackground": true,
      "problemMatcher": [
        "$haxe"
      ]
    }
  ]
}