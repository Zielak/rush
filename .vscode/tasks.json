{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run Web with watcher",
      "command": "flow",
      "args": [
        "run",
        "web",
        "--timeout 0"
      ],
      "problemMatcher": "$haxe"
    },
    {
      "label": "Rebuild",
      "command": "flow",
      "args": [
        "build",
        "web"
      ],
      "problemMatcher": "$haxe",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}